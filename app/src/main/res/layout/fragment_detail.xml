<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/iv_bookimage"
            android:layout_centerHorizontal="true"
            android:layout_width="180dp"
            android:layout_height="261dp"
            android:layout_margin="10dp" />

    <ImageView
            android:id="@+id/iv_like"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/star_dim"
            />


    <TextView
            android:id="@+id/tv_bookname"
            android:layout_below="@+id/iv_bookimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:layout_margin="10dp"
            tools:text="책이름책이름책이름책이름책이름책이름책이름책이름책이름책이름"
            android:maxLines="1" />

    <TextView
            android:id="@+id/tv_date"
            android:layout_below="@+id/iv_bookimage"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            tools:text="2020-03-25"
            android:maxLines="1" />

    <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_bookname"
            android:textSize="17dp"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:layout_margin="10dp"
            tools:text="가격"
            android:maxLines="1"/>

    <TextView
            android:id="@+id/tv_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:layout_margin="10dp"
            android:textSize="17dp"
            tools:text="출판사"/>


    <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_publisher"
            android:layout_margin="10dp"
            android:textSize="17dp"
            tools:text="책정보"/>


</RelativeLayout>